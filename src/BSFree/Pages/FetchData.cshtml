@page "/fetchdata"
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

<main>
@if (shouts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var shout in shouts)
    {
        <article>
            <div>
                <h3>@shout.Nick</h3>
            </div>
            <div>
                <p>@shout.Body</p>
                <img src="@shout.ImageUri" />
            </div>
        </article>
    }
}
</main>

@functions {
    Shout[] shouts;

    protected override async Task OnInitAsync()
    {
        shouts = await Http.GetJsonAsync<Shout[]>("sample-data/shouts.json");
    }
}
